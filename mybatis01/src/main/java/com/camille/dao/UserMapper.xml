<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace=绑定一个对应的Dao/Mapper接口-->
<mapper namespace="com.camille.dao.UserDao">
    <!--SQL查询语句-->
    <select id="getUserList" resultType="com.camille.pojo.User">
    select * from mybatis.user
  </select>

    <select id="getUserById" parameterType="int" resultType="com.camille.pojo.User">
    select * from mybatis.user where id=#{id}
  </select>

    <select id="addUser" parameterType="com.camille.pojo.User">
    insert into mybatis.user (id,name,pwd) value (#{id},#{name},#{pwd})
  </select>

    <select id="deleteUser" parameterType="int">
    delete from mybatis.user where id=#{id}
  </select>

    <select id="updateUser" parameterType="com.camille.pojo.User">
    update mybatis.user set name=#{name},pwd=#{pwd} where id=#{id};
  </select>

<!--  传递Map的key-->
  <select id="addUserByMap" parameterType="map">
    insert into mybatis.user (name,id) value (#{username},#{userid})
  </select>

<!--模糊查询-->
  <select id="getUserlike" parameterType="String" resultType="com.camille.pojo.User">
    select * from mybatis.user where name like #{value}
  </select>

</mapper>